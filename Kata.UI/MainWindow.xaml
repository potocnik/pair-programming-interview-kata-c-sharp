<Window x:Class="Kata.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kata.UI"
        mc:Ignorable="d"
        Title="Kata" Height="120" Width="400" MinHeight="120" MinWidth="400">
    <Grid>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10, 10, 10, 10" Height="25" Width="100" HorizontalContentAlignment="Right" Content="Goods:"></Label>
        <TextBox x:Name="txtGoods" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="110, 10, 80, 10" Height="25"></TextBox>
        <Button x:Name="btnCheckout" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10, 10, 10, 10" Width="60" Height="25" Content="Checkout" Click="btnCheckout_Click"></Button>
        <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10, 40, 10, 10" Height="25" Width="100" HorizontalContentAlignment="Right" Content="Total:"></Label>
        <Border BorderThickness="1" BorderBrush="Black" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="110, 40, 80, 10">
            <TextBlock x:Name="txtTotal" HorizontalAlignment="Left" VerticalAlignment="Stretch" Height="25"></TextBlock>
        </Border>
    </Grid>
</Window>
